<UserControl x:Class="MediCare.Historique"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MediCare"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d" Height="548" Width="744">
    <Grid Margin="0">

        <materialDesign:Card Background="{x:Null}" VerticalAlignment="Stretch">
            <Label Content="L'historique de toutes les consultations faites dans cet établissement : " HorizontalAlignment="Center" Height="43" Margin="0,82,0,423" VerticalAlignment="Center" Width="554" FontWeight="Bold" FontSize="16" FontFamily="Century Gothic"/>

        </materialDesign:Card>
        <StackPanel Margin="0" VerticalAlignment="Top" Background="#FF42919E">
            <Label FontSize="36" FontFamily="Century Gothic" Foreground="White" Content="Historique des consultation  " Margin="0" HorizontalAlignment="Center"/>
        </StackPanel>
        <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="82,130,83,70" HorizontalScrollBarVisibility="Auto" CanContentScroll="True" HorizontalAlignment="Center" VerticalAlignment="Center" Height="350">
            <StackPanel x:Name="StackSuivi"  Height="291" Width="682">
                <Border Background="{DynamicResource MaterialDesignDivider}" Height="1" HorizontalAlignment="Stretch" SnapsToDevicePixels="True" />
            </StackPanel>
        </ScrollViewer>

    </Grid>
</UserControl>
