<UserControl x:Class="MediCare.SupprimerPatient"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MediCare"
             mc:Ignorable="d" 
             d:DesignHeight="548" d:DesignWidth="746">
    <Grid>
        <Label Content="Selectionnez le patient que vous voudrez supprimer :" HorizontalAlignment="Left" Height="40" Margin="40,25,0,0" VerticalAlignment="Top" Width="645" FontSize="20" FontFamily="Century Gothic" FontWeight="Bold" />
        <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="45,91,46,103" HorizontalScrollBarVisibility="Auto" CanContentScroll="True" RenderTransformOrigin="0.49,0.504">
            <ListView x:Name="StackSuivi"  Height="354" Width="655">
                <Border Background="{DynamicResource MaterialDesignDivider}" Height="1" HorizontalAlignment="Stretch" SnapsToDevicePixels="True" />
            </ListView>
        </ScrollViewer>
        <Button Name="Supprimer" Content="Supprimer" HorizontalAlignment="Left" Height="35" Margin="510,475,0,0" VerticalAlignment="Top" Width="160" Background="#FF42919E" Click="Button_Click"/>
    </Grid>
</UserControl>
