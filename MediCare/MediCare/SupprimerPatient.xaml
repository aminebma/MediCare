<UserControl x:Class="MediCare.SupprimerPatient"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" 
             d:DesignHeight="548" d:DesignWidth="746">
    <Grid>
        <Border BorderBrush="CadetBlue" BorderThickness="2" HorizontalAlignment="Center" Height="274" Margin="0,145,0,0" VerticalAlignment="Top" Width="714">
            <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="0" HorizontalScrollBarVisibility="Auto" CanContentScroll="True" RenderTransformOrigin="0.49,0.504">
                <StackPanel x:Name="StackSuivi" Width="655" Height="224"/>
            </ScrollViewer>
        </Border>
        <Label Content="Etes-vous sure de vouloir supprimer ce patient ? :" HorizontalAlignment="Center" Margin="0,68,0,0" VerticalAlignment="Top" FontSize="20" FontFamily="Century Gothic" />
        <Button x:Name="Supprimer" Content="Supprimer" HorizontalAlignment="Left" Height="35" Margin="325,465,0,0" VerticalAlignment="Top" Width="133" Background="#FF42919E" Click="Button_Click" Foreground="White" FontFamily="Century Gothic"/>
    </Grid>
</UserControl>
