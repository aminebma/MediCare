<UserControl 
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MediCare"
             mc:Ignorable="d" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" x:Name="MenuUser" x:Class="MediCare.Menu"
             d:DesignHeight="300" d:DesignWidth="300" Width="1072" Height="548"
            TextElement.Foreground="{DynamicResource MaterialDesignBody}"
            TextElement.FontWeight="Regular"
            TextElement.FontSize="13"
            TextOptions.TextFormattingMode="Ideal"
            TextOptions.TextRenderingMode="Auto"
            FontFamily="{DynamicResource MaterialDesignFont}">
    <Grid>
        <StackPanel>
            <Grid Margin="0" VerticalAlignment="Top">
                <materialDesign:Card Background="{DynamicResource MaterialDesignBackground}">
                    <StackPanel>
                        <Expander HorizontalAlignment="Stretch" Header="       Rendez Vous de la journée" IsExpanded="True" Background="#4C42919E" FontFamily="Century Gothic" FontSize="14" Foreground="#FF2A5E66">
                            <ListView x:Name="ListeRDV">
                                <ListView.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Orientation="Horizontal"></StackPanel>
                                    </ItemsPanelTemplate>
                                </ListView.ItemsPanel>
                            </ListView>
                        </Expander>
                    </StackPanel>
                </materialDesign:Card>
            </Grid>
            <Grid VerticalAlignment="Top" Height="402">
                <Button x:Name="ConsultationBTN"
    Style="{DynamicResource MaterialDesignFloatingActionMiniButton}"
    materialDesign:ShadowAssist.ShadowDepth="Depth4" Margin="198,24,668,184" Height="Auto" Width="Auto" BorderBrush="{x:Null}" Content="Consultation" FontFamily="Century Gothic" FontSize="24" Click="ConsultationBTN_Click">
                    <Button.Background>
                        <LinearGradientBrush EndPoint="1,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                            <GradientStop Color="#FF30CC9D" Offset="1"/>
                            <GradientStop Color="#FF6EE092" Offset="0.004"/>
                        </LinearGradientBrush>
                    </Button.Background>
                </Button>
                <Button x:Name="AgendaBTN" 
                    Style="{DynamicResource MaterialDesignFloatingActionMiniButton}"
                    materialDesign:ShadowAssist.ShadowDepth="Depth4" Margin="510,45,406,212" Height="Auto" Width="Auto" BorderBrush="{x:Null}" Content="Agenda" FontFamily="Century Gothic" FontSize="24" Click="AgendaBTN_Click">
                    <Button.Background>
                        <LinearGradientBrush EndPoint="1,0.5" StartPoint="0.5,0">
                            <GradientStop Color="#FF00A2FB" Offset="0"/>
                            <GradientStop Color="#FF03DCCE" Offset="0.996"/>
                        </LinearGradientBrush>
                    </Button.Background>
                </Button>
                <Button x:Name="SuivieBTN"
                    Style="{DynamicResource MaterialDesignFloatingActionMiniButton}"
                    materialDesign:ShadowAssist.ShadowDepth="Depth4" Margin="774,28,146,229" Height="Auto" Width="Auto" BorderBrush="{x:Null}" Content="Suivie" FontFamily="Century Gothic" FontSize="24" Click="SuivieBTN_Click">
                    <Button.Background>
                        <LinearGradientBrush EndPoint="1,1" StartPoint="0.5,0">
                            <GradientStop Color="#FF5CE29F"/>
                            <GradientStop Color="#FF7637B6" Offset="1"/>
                        </LinearGradientBrush>
                    </Button.Background>
                </Button>
                <Button x:Name="RechercheBTN"
                    Style="{DynamicResource MaterialDesignFloatingActionMiniButton}"
                    materialDesign:ShadowAssist.ShadowDepth="Depth4" Margin="648,188,240,38" Height="Auto" Width="Auto" BorderBrush="{x:Null}" Content="Recherche" FontFamily="Century Gothic" FontSize="24">
                    <Button.Background>
                        <LinearGradientBrush EndPoint="1,1" StartPoint="0.5,0">
                            <GradientStop Color="#FF73E8BE" Offset="0"/>
                            <GradientStop Color="#FF6DB9FB" Offset="1"/>
                        </LinearGradientBrush>
                    </Button.Background>
                </Button>
                <Button x:Name="PAtientBTN"
                    Style="{DynamicResource MaterialDesignFloatingActionMiniButton}"
                    materialDesign:ShadowAssist.ShadowDepth="Depth4" Margin="381,208,518,38" Height="Auto" Width="Auto" BorderBrush="{x:Null}" Content="Patient" FontFamily="Century Gothic" FontSize="24" Click="PAtientBTN_Click">
                    <Button.Background>
                        <LinearGradientBrush EndPoint="1,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                            <GradientStop Color="#FF81CCFF" Offset="0"/>
                            <GradientStop Color="#FF717DFF" Offset="0.824"/>
                        </LinearGradientBrush>
                    </Button.Background>
                </Button>
                <Button x:Name="CompteBTN"
                    Style="{DynamicResource MaterialDesignFloatingActionMiniButton}"
                    materialDesign:ShadowAssist.ShadowDepth="Depth4" Margin="162,250,786,38" Height="Auto" Width="Auto" BorderBrush="{x:Null}" Content="Historique" FontFamily="Century Gothic" FontSize="24" Click="CompteBTN_Click">
                    <Button.Background>
                        <LinearGradientBrush EndPoint="1,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                            <GradientStop Color="#FF42919E"/>
                            <GradientStop Color="#FFF8D9D6" Offset="0.867"/>
                        </LinearGradientBrush>
                    </Button.Background>
                </Button>
            </Grid>
        </StackPanel>
        <Button x:Name="refreshRDVListe" Height="Auto" Margin="0,0,1021,499" Background="{x:Null}" BorderBrush="{x:Null}" Click="refreshRDVListe_Click" Foreground="#FF93B4BA" >
            <materialDesign:PackIcon Kind="Refresh" HorizontalAlignment="Center" VerticalAlignment="Center" Width="32" Height="28"></materialDesign:PackIcon>
            <Button.ToolTip>
                <TextBlock>Rafraîchir la liste des rendez vous</TextBlock>
            </Button.ToolTip>
        </Button>
    </Grid>

</UserControl>
