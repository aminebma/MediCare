<UserControl 
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MediCare"
             mc:Ignorable="d" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" x:Name="MenuUser" x:Class="MediCare.Menu"
             d:DesignHeight="300" d:DesignWidth="300" Width="1072" Height="548"
            TextElement.Foreground="{DynamicResource MaterialDesignBody}"
            TextElement.FontWeight="Regular"
            TextElement.FontSize="13"
            TextOptions.TextFormattingMode="Ideal"
            TextOptions.TextRenderingMode="Auto"
            FontFamily="{DynamicResource MaterialDesignFont}">
    <Grid>
        <StackPanel>
            <Grid Margin="0" VerticalAlignment="Top">
                <materialDesign:Card Background="{DynamicResource MaterialDesignBackground}">
                    <StackPanel>
                        <Expander HorizontalAlignment="Stretch" Header="       Rendez Vous de la journée" IsExpanded="True" Background="#4C42919E" FontFamily="Century Gothic" FontSize="14" Foreground="#FF2A5E66">
                            <ListView x:Name="ListeRDV">
                                <ListView.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Orientation="Horizontal"></StackPanel>
                                    </ItemsPanelTemplate>
                                </ListView.ItemsPanel>
                            </ListView>
                        </Expander>
                    </StackPanel>
                </materialDesign:Card>
            </Grid>
            <Grid VerticalAlignment="Top" Height="402">
                <Button x:Name="ConsultationBTN"
    Style="{DynamicResource MaterialDesignFloatingActionMiniButton}"
    materialDesign:ShadowAssist.ShadowDepth="Depth4" Margin="198,24,668,184" Height="Auto" Width="Auto" BorderBrush="{x:Null}" Content="Consultation" FontFamily="Century Gothic" FontSize="24" Click="ConsultationBTN_Click" Foreground="White" FontWeight="Bold">
                    <Button.Background>
                        <LinearGradientBrush EndPoint="1,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                            <GradientStop Color="#FF30CC9D" Offset="1"/>
                            <GradientStop Color="#FF6EE092" Offset="0.004"/>
                        </LinearGradientBrush>
                    </Button.Background>
                </Button>
                <Button x:Name="AgendaBTN" 
                    Style="{DynamicResource MaterialDesignFloatingActionMiniButton}"
                    materialDesign:ShadowAssist.ShadowDepth="Depth4" Margin="510,45,406,212" Height="Auto" Width="Auto" BorderBrush="{x:Null}" Content="Agenda" FontFamily="Century Gothic" FontSize="24" Click="AgendaBTN_Click" Foreground="White" FontWeight="Bold">
                    <Button.Background>
                        <LinearGradientBrush EndPoint="1,0.5" StartPoint="0.5,0">
                            <GradientStop Color="#FF00A2FB" Offset="0"/>
                            <GradientStop Color="#FF03DCCE" Offset="0.996"/>
                        </LinearGradientBrush>
                    </Button.Background>
                </Button>
                <Button x:Name="SuivieBTN"
                    Style="{DynamicResource MaterialDesignFloatingActionMiniButton}"
                    materialDesign:ShadowAssist.ShadowDepth="Depth4" Margin="774,28,146,229" Height="Auto" Width="Auto" BorderBrush="{x:Null}" Content="Suivie" FontFamily="Century Gothic" FontSize="24" Click="SuivieBTN_Click" Foreground="White" FontWeight="Bold">
                    <Button.Background>
                        <LinearGradientBrush EndPoint="1,1" StartPoint="0.5,0">
                            <GradientStop Color="#FF5CE29F"/>
                            <GradientStop Color="#FF7637B6" Offset="1"/>
                        </LinearGradientBrush>
                    </Button.Background>
                </Button>
                <Button x:Name="RechercheBTN"
                    Style="{DynamicResource MaterialDesignFloatingActionMiniButton}"
                    materialDesign:ShadowAssist.ShadowDepth="Depth4" Margin="648,188,240,38" Height="Auto" Width="Auto" BorderBrush="{x:Null}" Content="Recherche" FontFamily="Century Gothic" FontSize="24" Foreground="White" FontWeight="Bold" Click="RechercheBTN_Click">
                    <Button.Background>
                        <LinearGradientBrush EndPoint="1,1" StartPoint="0.5,0">
                            <GradientStop Color="#FF73E8BE" Offset="0"/>
                            <GradientStop Color="#FF6DB9FB" Offset="1"/>
                        </LinearGradientBrush>
                    </Button.Background>
                </Button>
                <Button x:Name="PAtientBTN"
                    Style="{DynamicResource MaterialDesignFloatingActionMiniButton}"
                    materialDesign:ShadowAssist.ShadowDepth="Depth4" Margin="381,208,518,38" Height="Auto" Width="Auto" BorderBrush="{x:Null}" Content="Patient" FontFamily="Century Gothic" FontSize="24" Click="PAtientBTN_Click" Foreground="White" FontWeight="Bold">
                    <Button.Background>
                        <LinearGradientBrush EndPoint="1,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                            <GradientStop Color="#FF81CCFF" Offset="0"/>
                            <GradientStop Color="#FF717DFF" Offset="0.824"/>
                        </LinearGradientBrush>
                    </Button.Background>
                </Button>
                <Button x:Name="CompteBTN"
                    Style="{DynamicResource MaterialDesignFloatingActionMiniButton}"
                    materialDesign:ShadowAssist.ShadowDepth="Depth4" Margin="164,250,784,38" Height="Auto" Width="Auto" BorderBrush="{x:Null}" Content="Historique" FontFamily="Century Gothic" FontSize="24" Click="CompteBTN_Click" Foreground="White" FontWeight="Bold">
                    <Button.Background>
                        <LinearGradientBrush EndPoint="1,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                            <GradientStop Color="#FF42919E"/>
                            <GradientStop Color="#FFF8D9D6" Offset="0.867"/>
                        </LinearGradientBrush>
                    </Button.Background>
                </Button>
                <Image Height="88" Margin="246,73,720,241" Width="106" Source="ressources/icones/icones png/64 Pixels/dentist.png" Opacity="0.5" IsEnabled="False" IsHitTestVisible="False"/>
                <Image Margin="548,83,440,255" Source="ressources/icones/icones png/64 Pixels/note-on-a-clipboard.png" Opacity="0.5" IsHitTestVisible="False"/>
                <Image Margin="805,55,169,263" Source="ressources/icones/icones png/64 Pixels/pulse-line.png" Opacity="0.5" IsEnabled="False" IsHitTestVisible="False"/>
                <materialDesign:PackIcon Kind="DatabaseSearch" Margin="702,242,0,0" Height="73" Width="84" Foreground="#DDFFFFFF" Opacity="0.5" IsEnabled="False" IsHitTestVisible="False" Focusable="False"/>
                <materialDesign:PackIcon Kind="History" Margin="198,284,0,0" Height="50" Width="56" Foreground="#DDFFFFFF" Opacity="0.5" IsEnabled="False" Focusable="False" IsHitTestVisible="False"/>
                <materialDesign:PackIcon Kind="Human" Margin="422,244,0,0" Height="84" Width="92" Foreground="#DDFFFFFF" Opacity="0.5" IsEnabled="False" IsHitTestVisible="False" Focusable="False"/>
            </Grid>
        </StackPanel>
        <Button x:Name="refreshRDVListe" Height="Auto" Margin="0,0,1021,499" Background="{x:Null}" BorderBrush="{x:Null}" Click="refreshRDVListe_Click" Foreground="#FF93B4BA" >
            <materialDesign:PackIcon Kind="Refresh" HorizontalAlignment="Center" VerticalAlignment="Center" Width="32" Height="28"></materialDesign:PackIcon>
            <Button.ToolTip>
                <TextBlock>Rafraîchir la liste des rendez vous</TextBlock>
            </Button.ToolTip>
        </Button>
    </Grid>

</UserControl>
