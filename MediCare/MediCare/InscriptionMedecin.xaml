<Window x:Class="MediCare.InscriptionMedecin"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MediCare"
      mc:Ignorable="d"
      Title="Medecin2" Height="442" Width="642">

    <Grid Background="White" >
        <TextBox HorizontalAlignment="Left" Height="32" TextWrapping="Wrap" Text="Nom " VerticalAlignment="Top" Width="145" Margin="297,42,0,0" BorderBrush="#FF3597CC" Foreground="#FF3599CC" BorderThickness="0,0,0,3"/>
        <TextBox HorizontalAlignment="Left" Height="32" TextWrapping="Wrap" Text="Prenom" VerticalAlignment="Top" Width="145" Margin="479,42,0,0" BorderBrush="#FF3597CC" Foreground="#FF3599CC" BorderThickness="0,0,0,3" TextChanged="TextBox_TextChanged"/>
        <TextBox HorizontalAlignment="Left" Height="33" TextWrapping="Wrap" Text="Adresse" VerticalAlignment="Top" Width="144" Margin="296,97,0,0" BorderBrush="#FF3597CC" Foreground="#FF3599CC" BorderThickness="0,0,0,3"/>
        <TextBox HorizontalAlignment="Left" Height="33" TextWrapping="Wrap" Text="Numéro de Tel" VerticalAlignment="Top" Width="144" Margin="478,97,0,0" BorderBrush="#FF3597CC" Foreground="#FF3599CC" BorderThickness="0,0,0,3"/>
        <TextBox HorizontalAlignment="Left" Height="31" TextWrapping="Wrap" Text="Clé d'activation" VerticalAlignment="Top" Width="144" Margin="296,155,0,0" BorderBrush="#FF3597CC" Foreground="#FF3599CC" BorderThickness="0,0,0,3" TextChanged="TextBox_TextChanged_1"/>
        <Button Content="Sign in" HorizontalAlignment="Left" VerticalAlignment="Top" Width="136" Margin="458,263,0,0" Padding="0" BorderThickness="0" Background="#FFEA3999" Foreground="White" Height="34" Click="Button_Click"/>
        <RadioButton Content="Activé" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="518,184,0,0" Checked="RadioButton_Checked" FontWeight="Bold" Height="19" Width="76" Foreground="#FF3599CC" BorderBrush="#FF357070"/>
        <Image Margin="588,-5,5,359" Source="ressources/images/bulles.PNG" Stretch="Fill" Opacity="0.5"/>
        <Image Margin="589,362,-2,-26" Source="ressources/images/bulles_2.PNG" Stretch="Fill" Opacity="0.5"/>
        <Image Margin="267,216,308,141" Source="ressources/images/bulles_3.PNG" Stretch="Fill" Opacity="0.5"/>
        <DockPanel HorizontalAlignment="Left" Height="413" LastChildFill="False" VerticalAlignment="Top" Width="253" Background="#FF3599CC" Margin="0,0,0,-2"/>
        <Image Margin="8,139,381,160" Source="ressources/images/logo_final_blue.PNG" Stretch="Fill"/>
        <Image Margin="316,372,290,10" Source="ressources/images/akk.PNG" Stretch="Fill"/>
        <Image Margin="352,372,256,12" Source="ressources/images/facebbok.PNG" Stretch="Fill"/>
        <Image Margin="280,372,324,7" Source="ressources/images/mail.PNG" Stretch="Fill"/>
    </Grid>
</Window>
