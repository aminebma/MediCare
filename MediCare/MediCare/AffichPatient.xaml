        </ScrollViewer>
        <Button x:Name="search" Content="Ok" HorizontalAlignment="Left" Height="31" Margin="900,495,0,0" VerticalAlignment="Top" Width="91" Click="search_Click" Background="#FF6A97AC" RenderTransformOrigin="0.5,0.5"/>
