                        <RotateTransform Angle="-31.602"/>
                        <TranslateTransform X="182.112" Y="-104.668"/>
                    </TransformGroup>
                </Image.RenderTransform>
                <Image.OpacityMask>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
