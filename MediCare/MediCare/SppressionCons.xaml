            </Button>
            <Button x:Name="Facebook" Style="{StaticResource MaterialDesignFloatingActionMiniAccentButton}" Background="{x:Null}" BorderBrush="{x:Null}" Padding="0" Width="50" Height="50" Margin="963.5,630,0,9" Foreground="#FF634523" HorizontalAlignment="Left">
                <materialDesign:PackIcon Kind="Facebook" Width="40" Height="40"/>
            </Button>
            <Button x:Name="Twitter" Style="{StaticResource MaterialDesignFloatingActionMiniAccentButton}" Background="{x:Null}" BorderBrush="{x:Null}" Padding="0" Width="50" Height="50" Margin="913.5,630,0,9" Foreground="#FF634523" HorizontalAlignment="Left">
                <materialDesign:PackIcon Kind="Twitter" Width="40" Height="40"/>
