            <Label x:Name="nomL" Content="Nom du Patient :" HorizontalAlignment="Left" Height="37" Margin="324,144,0,0" VerticalAlignment="Top" Width="212" FontSize="18" FontFamily="Century Gothic" FontWeight="Bold"/>
            <Label x:Name="prenomL" Content="Prénom du Patient :" HorizontalAlignment="Left" Height="38" Margin="322,262,0,0" VerticalAlignment="Top" Width="212" FontSize="18" FontFamily="Century Gothic" FontWeight="Bold"/>
            <Button Content="Supprimer" HorizontalAlignment="Left" Height="52" Margin="801,510,0,0" VerticalAlignment="Top" Width="162" Background="Gray" Click="Button_Click" FontSize="18" FontFamily="Century Gothic"/>
            <TextBlock x:Name="patientsT" HorizontalAlignment="Left" Height="201" Margin="278,469,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="455"/>
            <Label x:Name="date" Content="Date de la consultation :" HorizontalAlignment="Left" Height="38" Margin="322,400,0,0" VerticalAlignment="Top" Width="224" FontSize="18" FontFamily="Century Gothic" FontWeight="Bold"/>
            <DatePicker x:Name="dateT" HorizontalAlignment="Left" Height="62" Margin="562,379,0,0" VerticalAlignment="Top" Width="316"/>

        </Grid>

    </Grid>
</Window>
