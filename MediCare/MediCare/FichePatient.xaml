<Window x:Class="MediCare.FichePatient"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MediCare"
        mc:Ignorable="d"
        Title="FichePatient" Height="772.5" Width="1107.5">
    <Grid Background="#FFE5E8ED" Margin="0,-20,0,20">
        <Label Content="Date de naissance" HorizontalAlignment="Left" Height="42" Margin="37,177,0,0" VerticalAlignment="Top" Width="160" FontSize="18" Foreground="#FF3599CC"/>
        <TextBox x:Name="Adresse" HorizontalAlignment="Left" Height="42" Margin="798,175,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="240"/>
        <Label x:Name="Adresse1" Content="Adresse" HorizontalAlignment="Left" Height="42" Margin="602,177,0,0" VerticalAlignment="Top" Width="160" FontSize="18" Foreground="#FF3599CC"/>
        <TextBox x:Name="Num_tel" HorizontalAlignment="Left" Height="42" Margin="240,289,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="240" PreviewTextInput="Num_tel_PreviewTextInput"/>
        <Label Content=" Numero de téléphone" HorizontalAlignment="Left" Height="42" Margin="37,289,0,0" VerticalAlignment="Top" Width="160" FontSize="18" Foreground="#FF3599CC"/>
        <TextBox x:Name="Taille" HorizontalAlignment="Left" Height="42" Margin="798,393,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="240"/>
        <Label x:Name="Taille1" Content="Taille" HorizontalAlignment="Left" Height="42" Margin="602,393,0,0" VerticalAlignment="Top" Width="160" FontSize="18" Foreground="#FF3599CC"/>
        <TextBox x:Name="Poids" HorizontalAlignment="Left" Height="42" Margin="240,395,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="240"/>
        <Label Content="Poids" HorizontalAlignment="Left" Height="42" Margin="37,393,0,0" VerticalAlignment="Top" Width="160" FontSize="18" Foreground="#FF3599CC"/>
        <TextBox x:Name="Groupage" HorizontalAlignment="Left" Height="42" Margin="240,580,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="240"/>
        <Label Content="Groupage" HorizontalAlignment="Left" Height="42" Margin="37,580,0,0" VerticalAlignment="Top" Width="160" FontSize="18" Foreground="#FF3599CC"/>
        <TextBox x:Name="Maladie" HorizontalAlignment="Left" Height="42" Margin="798,491,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="240"/>
        <Label Content="Maladie" HorizontalAlignment="Left" Height="42" Margin="602,491,0,0" VerticalAlignment="Top" Width="160" FontSize="18" Foreground="#FF3599CC"/>
        <TextBox x:Name="Etat_santé" HorizontalAlignment="Left" Height="42" Margin="240,491,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="240"/>
        <Label Content="État de santé" HorizontalAlignment="Left" Height="42" Margin="37,491,0,0" VerticalAlignment="Top" Width="160" FontSize="18" Foreground="#FF3599CC"/>
        <Button x:Name="Ajouter" Content="Ajouter un patient" HorizontalAlignment="Left" Height="39" Margin="597,597,0,0" VerticalAlignment="Top" Width="165" Background="#FF3599CA" Foreground="White" Click="Ajouter_Click"/>
        <Button x:Name="Supprimer" Content="Supprimer un patient" HorizontalAlignment="Left" Height="39" Margin="866,667,0,0" VerticalAlignment="Top" Width="172" Background="#FFBF2237" Foreground="White"/>
        <Button x:Name="Rechercher" Content="Rechercher un patient" HorizontalAlignment="Left" Height="39" Margin="240,667,0,0" VerticalAlignment="Top" Width="176" Background="#FF3599CA" Foreground="White"/>
        <TextBox x:Name="Sexe" HorizontalAlignment="Left" Height="42" Margin="798,289,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="240"/>
        <Label Content="Sexe" HorizontalAlignment="Left" Height="42" Margin="602,289,0,0" VerticalAlignment="Top" Width="160" FontSize="18" Foreground="#FF3599CC" RenderTransformOrigin="1.844,0.4"/>
        <DatePicker x:Name="Date_naiss" HorizontalAlignment="Left" Margin="228,180,0,0" VerticalAlignment="Top" Height="39" Width="252" FirstDayOfWeek="Sunday" PreviewTextInput="DatePicker_PreviewTextInput"/>

    </Grid>
</Window>
