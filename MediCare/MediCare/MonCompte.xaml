<UserControl x:Class="MediCare.MonCompte"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MediCare"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" Width="1072" Height="548">
    <Grid>
        <Grid x:Name="GridDroit" HorizontalAlignment="Left" Height="548" Margin="326,0,0,0" VerticalAlignment="Top" Width="746">
            <Button x:Name="ModifMed" Content="Modifier mes informations" HorizontalAlignment="Left" Height="60" Margin="268,98,0,0" VerticalAlignment="Top" Width="272" Background="{x:Null}" FontFamily="Century Gothic" FontSize="16" Click="ModifMed_Click" BorderBrush="{x:Null}" Foreground="CadetBlue"/>
            <Button x:Name="MonHistorique" Content="Mon Historique" HorizontalAlignment="Left" Height="60" Margin="268,191,0,0" VerticalAlignment="Top" Width="274" Background="{x:Null}" FontFamily="Century Gothic" FontSize="16" BorderBrush="{x:Null}" Click="MonHistorique_Click" Foreground="CadetBlue" />
            <Button x:Name="Historique" Content="Historique de cet établissement" HorizontalAlignment="Left" Height="60" Margin="266,285,0,0" VerticalAlignment="Top" Width="278" Background="{x:Null}" FontFamily="Century Gothic" FontSize="16" BorderBrush="{x:Null}" Click="Historique_Click" Foreground="CadetBlue" />
            <Button x:Name="Logout" Content="Se déconnecter" HorizontalAlignment="Left" Height="60" Margin="560,477,0,0" VerticalAlignment="Top" Width="168" Background="#FF6A97AC" FontFamily="Century Gothic" FontSize="16" Click="Logout_Click" BorderBrush="{x:Null}"/>
            <Label Content="Mon Compte " HorizontalAlignment="Left" Height="54" Margin="537,-1,-13,0" VerticalAlignment="Top" Width="222" Foreground="CadetBlue" FontSize="28" FontWeight="Bold"/>
            <Image Margin="28,9,637,448" Source="ressources/images/bulles_3.PNG" Stretch="Fill" RenderTransformOrigin="0.58,0.533" Opacity="0.3">
                <Image.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform ScaleY="0.987" ScaleX="1.013"/>
                        <SkewTransform AngleY="-1.116"/>
                        <RotateTransform Angle="-53.467"/>
