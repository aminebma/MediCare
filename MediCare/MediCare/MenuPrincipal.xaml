<Window
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MediCare"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" x:Name="Agenda" x:Class="MediCare.MenuPrincipal"
             mc:Ignorable="d" Height="720" Width="1080" Background="White" WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <Storyboard x:Key="OpenMenu">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(FrameworkElement.Width)" Storyboard.TargetName="GridMenu">
                <EasingDoubleKeyFrame KeyTime="0" Value="70"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.3" Value="240"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Key="CloseMenu">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(FrameworkElement.Width)" Storyboard.TargetName="GridMenu">
                <EasingDoubleKeyFrame KeyTime="0" Value="240"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.3" Value="70"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
    </Window.Resources>
    <Window.Triggers>
        <EventTrigger RoutedEvent="ButtonBase.Click" SourceName="ButtonOpenMenu">
            <BeginStoryboard Storyboard="{StaticResource OpenMenu}"/>
        </EventTrigger>
        <EventTrigger RoutedEvent="ButtonBase.Click" SourceName="ButtonCloseMenu">
            <BeginStoryboard Storyboard="{StaticResource CloseMenu}"/>
        </EventTrigger>
    </Window.Triggers>
    <Grid x:Name="MainGrid">
        <Grid x:Name="SelectionGrid" HorizontalAlignment="Left" Height="620" Margin="75,70,0,0" VerticalAlignment="Top" Width="760"/>
        <Grid Height="86" VerticalAlignment="Top" Background="#FF77B3B4">
            <Grid.Effect>
                <DropShadowEffect BlurRadius="1" ShadowDepth="1" Color="#FFACACAC"/>
            </Grid.Effect>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <TextBlock VerticalAlignment="Center" FontSize="24" FontFamily="Century Gothic" Foreground="White"><Run Text="Option"/><Run Text="s"/></TextBlock>
                <materialDesign:PopupBox PlacementMode="BottomAndAlignRightEdges" StaysOpen="False" Margin="10" Foreground="White">
                    <StackPanel Width="150">
                        <Button Content="Settings"/>
                        <Button Content="Account"/>
                        <Button Content="Help"/>
                        <Separator/>
                        <Button Content="Logout"/>
                    </StackPanel>
                </materialDesign:PopupBox>
            </StackPanel>
        </Grid>
        <Image Margin="985,136,28,499" Source="ressources/images/bulles_3.PNG" Stretch="Fill" Opacity="0.5" RenderTransformOrigin="0.515,1.012">
            <Image.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="72.589"/>
                    <TranslateTransform X="-26.399" Y="-16.964"/>
                </TransformGroup>
            </Image.RenderTransform>
        </Image>
        <Image Margin="1012,575,20,62" Source="ressources/images/bulles_2.PNG" Stretch="Fill" Opacity="0.5" RenderTransformOrigin="0.356,0.478">
            <Image.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-12.993"/>
                    <TranslateTransform X="-0.124" Y="0.55"/>
                </TransformGroup>
            </Image.RenderTransform>
            <Image.OpacityMask>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="#FF3E3E40" Offset="1"/>
                </LinearGradientBrush>
            </Image.OpacityMask>
        </Image>
        <Grid x:Name="GridMenu" Width="70" HorizontalAlignment="Left" Background="#FF77B3B4">
            <StackPanel>
                <Grid Width="268" HorizontalAlignment="Left" RenderTransformOrigin="0.5,0.5" Background="#FF183A83" Height="86">
                    <Grid.Effect>
                        <DropShadowEffect BlurRadius="2" ShadowDepth="1" Color="#FFAEAEAE"/>
                    </Grid.Effect>
                    <Grid.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform/>
                            <RotateTransform/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </Grid.RenderTransform>
                    <Button x:Name="ButtonOpenMenu" Height="60" Width="78" Margin="0,2.5,181.5,0" HorizontalAlignment="Right" VerticalAlignment="Top" Style="{StaticResource MaterialDesignFloatingActionMiniAccentButton}" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="White" Click="ButtonOpenMenu_Click">
                        <materialDesign:PackIcon Kind="Menu" Width="25" Height="25"/>
                    </Button>
                    <Button x:Name="ButtonCloseMenu" Visibility="Collapsed" Height="60" Width="78" Margin="0,2.5,181.5,0" HorizontalAlignment="Right" VerticalAlignment="Top" Style="{StaticResource MaterialDesignFloatingActionMiniAccentButton}" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="White" Click="ButtonCloseMenu_Click">
                        <materialDesign:PackIcon Kind="ArrowLeft" Width="25" Height="25"/>
                    </Button>
                </Grid>
                <ListView Height="649" Foreground="#DD000000" SelectionChanged="ListViewMenu_SelectionChanged">
                    <ListViewItem x:Name="ItemHome" Height="100" Width="250">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Home" Height="42" Width="40" Margin="10" Foreground="#DDFFFFFF"/>
                            <TextBlock Text="Home" VerticalAlignment="Center" Margin="20 10" FontFamily="Century Gothic" FontSize="22" Foreground="#DDFFFFFF"/>
                        </StackPanel>
                    </ListViewItem>
                    <ListViewItem x:Name="ItemConsultation" Height="100" Width="250">
                        <StackPanel Orientation="Horizontal">
                            <Image Height="42" Width="40" Margin="10" Source="ressources/icones/icones png/64 Pixels/dentist.png"/>
                            <TextBlock Text="Consultation" VerticalAlignment="Center" Margin="20 10" FontFamily="Century Gothic" FontSize="22" Foreground="#DDFFFFFF"/>
                        </StackPanel>
                    </ListViewItem>
                    <ListViewItem x:Name="ItemAgenda" Height="100" Width="250">
                        <StackPanel Orientation="Horizontal">
                            <Image Height="42" Width="40" Margin="10" Source="ressources/icones/icones png/64 Pixels/note-on-a-clipboard.png"/>
                            <TextBlock Text="Agenda" VerticalAlignment="Center"  Margin="20 10" FontFamily="Century Gothic" FontSize="22" Foreground="#DDFFFFFF"/>
                        </StackPanel>
                    </ListViewItem>
                    <ListViewItem x:Name="ItemPatient" Height="100" Width="250">
                        <StackPanel Orientation="Horizontal">
                            <Image  Height="42" Width="40" Margin="10" Source="ressources/icones/icones png/64 Pixels/band-aid-forming-a-cross-mark.png"/>
                            <TextBlock Text="Patient" VerticalAlignment="Center"  Margin="20 10" FontFamily="Century Gothic" FontSize="22" Foreground="#DDFFFFFF"/>
                        </StackPanel>
                    </ListViewItem>
                    <ListViewItem x:Name="ItemRecherche" Height="100" Width="250">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Loupe" Height="42" Width="40" Margin="10" Foreground="#DDFFFFFF"/>
                            <TextBlock Text="Recherche" VerticalAlignment="Center"  Margin="20 10" FontFamily="Century Gothic" FontSize="22" Foreground="#DDFFFFFF"/>
                        </StackPanel>
                    </ListViewItem>
                </ListView>
            </StackPanel>
        </Grid>
        <Expander x:Name="NotificationsExpender" Header="Notifications" HorizontalAlignment="Right" Height="600" VerticalAlignment="Top" Width="237" Foreground="#FF183A83" FontFamily="Century Gothic" FontSize="36" FontWeight="Bold" BorderBrush="#FF183A83" Margin="0,86,0,0" Background="#3377B3B4">
            <ListView x:Name="ListeNotif" Height="569.607" Foreground="#FF183A83" Background="#FF1B88D3"/>
        </Expander>
        <Image HorizontalAlignment="Left" Height="86" Margin="438.5,0,0,0" VerticalAlignment="Top" Width="265.5" Source="ressources/images/medicare_blanc.PNG" Stretch="Fill"/>
    </Grid>
</Window>
