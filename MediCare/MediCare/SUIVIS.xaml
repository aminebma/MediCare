<UserControl x:Class="MediCare.SUIVIS"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MediCare"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Height="548" Width="702">
    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="75,142,77,29" HorizontalScrollBarVisibility="Auto" CanContentScroll="True">
            <StackPanel x:Name="StackSuivi"  Height="368" Width="547">
                <Border Background="{DynamicResource MaterialDesignDivider}" Height="1" HorizontalAlignment="Stretch" SnapsToDevicePixels="True" />
            </StackPanel>
        </ScrollViewer>
        <StackPanel Margin="0,0,2,0" VerticalAlignment="Top" Background="#FF6A97AC">
            <Label FontSize="48" FontFamily="Century Gothic" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center" Content="Suivi médical :" Margin="0"/>
        </StackPanel>
        <Label Content="Le suivi médical de cepatient :" HorizontalAlignment="Left" Margin="40,88,0,0" VerticalAlignment="Top" Height="42" Width="451" FontSize="20" FontWeight="Bold" FontFamily="Century Gothic"/>
    </Grid>
</UserControl>
