<Window x:Class="MediCare.SUIVIS"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MediCare"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="SUIVIS" Height="548" Width="1072">
    <Grid>
        <ScrollViewer>
            <materialDesign:Card Background="{DynamicResource MaterialDesignBackground}" HorizontalAlignment="Left" Width="1064" Margin="-3,250,0,-1" Height="268">
                <StackPanel Name="StackSuivi" Margin="-3,-264,3,11">
                    <Border Background="{DynamicResource MaterialDesignDivider}" Height="1" HorizontalAlignment="Stretch" SnapsToDevicePixels="True" />
                </StackPanel>
            </materialDesign:Card>
        </ScrollViewer>
        <StackPanel HorizontalAlignment="Left" Height="70" Margin="-2,-3,-1,0" VerticalAlignment="Top" Width="1067" Background="#FF6A97AC">
            <Label  Width="345" FontSize="48" FontFamily="Century Gothic" Foreground="White" Height="84" VerticalAlignment="Center" HorizontalAlignment="Center" Content="Suivi médical :" Margin="321,0,331,0"/>
        </StackPanel>
        <Label Content="Nom * :" HorizontalAlignment="Left" Height="37" Margin="71,123,0,0" VerticalAlignment="Top" Width="123" FontSize="18" FontFamily="Century Gothic" FontWeight="Bold"/>
        <ComboBox x:Name="nomPatientT" HorizontalAlignment="Left" BorderThickness="0,0,0,3" Height="38" Margin="179,126,0,0" VerticalAlignment="Top" Width="231"  BorderBrush="#FF77B3B4" FontFamily="Century Gothic" FontSize="16" Foreground="#FF7C5223" IsEditable="True" TextBoxBase.TextChanged="nomPatientT_TextChanged" IsTextSearchEnabled="False" MouseEnter="nomPatientT_MouseEnter" GotFocus="nomPatientT_GotFocus" PreviewKeyDown="nomPatientT_PreviewKeyDown"/>
        <ComboBox x:Name="prenomPatientT" HorizontalAlignment="Left" BorderThickness="0,0,0,3" Height="36" Margin="634,127,0,0" VerticalAlignment="Top" Width="234"  BorderBrush="#FF77B3B4" FontFamily="Century Gothic" FontSize="16" Foreground="#FF7C5223" IsEditable="True" TextBoxBase.TextChanged="prenomPatientT_TextChanged" IsTextSearchEnabled="False" MouseEnter="prenomPatientT_MouseEnter" PreviewKeyDown="prenomPatientT_PreviewKeyDown" GotFocus="prenomPatientT_GotFocus"/>
        <Label Content="Prénom * :" HorizontalAlignment="Left" Height="37" Margin="501,123,0,0" VerticalAlignment="Top" Width="123" RenderTransformOrigin="3.303,0.568" FontWeight="Bold" FontFamily="Century Gothic" FontSize="18"/>
        <Button x:Name="suivi" Content="Afficher le suivi" HorizontalAlignment="Left" Height="51" Margin="673,190,0,0" VerticalAlignment="Top" Width="217" Background="#FF6A97AC" Click="suivi_Click"/>
    </Grid>
</Window>
