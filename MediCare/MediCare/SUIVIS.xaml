<Window x:Class="MediCare.SUIVIS"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MediCare"
        mc:Ignorable="d"
        Title="SUIVIS" Height="700" Width="1000">
    <Grid>
        <Label Content="Nom :" HorizontalAlignment="Left" Height="54" Margin="71,71,0,0" VerticalAlignment="Top" Width="123" FontSize="18" FontFamily="Century Gothic" FontWeight="Bold"/>
        <TextBox x:Name="nomT" HorizontalAlignment="Left" Height="36" Margin="235,76,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="186" FontSize="18" FontFamily="Century Gothic"/>
        <Label Content="Prénom :" HorizontalAlignment="Left" Height="54" Margin="501,71,0,0" VerticalAlignment="Top" Width="123" RenderTransformOrigin="3.303,0.568" FontWeight="Bold" FontFamily="Century Gothic" FontSize="18"/>
        <TextBox x:Name="prenomT" HorizontalAlignment="Left" Height="36" Margin="698,79,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="186" FontSize="18" FontFamily="Century Gothic"/>
        <Button x:Name="suivi" Content="Afficher le suivi" HorizontalAlignment="Left" Height="51" Margin="673,172,0,0" VerticalAlignment="Top" Width="217" Background="Gray" Click="suivi_Click"/>
        <ListView x:Name="ListSuivi" HorizontalAlignment="Left" Height="333" Margin="58,259,0,0" VerticalAlignment="Top" Width="508">
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>
        <TextBlock x:Name="consAccessT" HorizontalAlignment="Left" Height="291" Margin="652,299,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Width="308"/>
    </Grid>
</Window>
