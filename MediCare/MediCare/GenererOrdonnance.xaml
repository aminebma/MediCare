<UserControl x:Class="MediCare.GenererOrdonnance"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MediCare"
        mc:Ignorable="d" Height="548" Width="702">
    <Grid Width="702" Height="548" Background="White">
        <Button x:Name="VisuaiserOrdo" Content="Visualiser ordonnance PDF" HorizontalAlignment="Center" Height="42" Margin="0,199,0,0" VerticalAlignment="Top" Width="350" Background="#FF6A97AC" Click="VisuaiserOrdo_Click"/>
        <Button x:Name="ImprimerOrdo" Content="Imprimer ordonnance PDF" HorizontalAlignment="Center" Height="42" Margin="0,257,0,0" VerticalAlignment="Top" Width="350" Background="#FF6A97AC" Click="ImprimerOrdo_Click"/>
        <StackPanel Height="68" Margin="0" VerticalAlignment="Top" Width="702" Background="#FF6A97AC">
            <Label FontSize="36" FontFamily="Century Gothic" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center" Content="Ordonnance :" Margin="0"/>
        </StackPanel>
        <Button x:Name="Valider" Content="Valider la consultation" HorizontalAlignment="Center" Height="41" Margin="0,470,0,0" VerticalAlignment="Center" Width="350" Click="Valider_Click" Background="#FF6A97AC"/>
        <Label Content="L'ordonnance de cette consultation a été générée, Voulez-vous :" HorizontalAlignment="Center" Margin="0,110,0,0" VerticalAlignment="Top" FontSize="16" FontWeight="Bold" FontFamily="Century Gothic"/>

    </Grid>
</UserControl>
