             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" 
             xmlns:local="clr-namespace:MediCare"
             mc:Ignorable="d" 
            d:DesignHeight="548" d:DesignWidth="1080" Width="1080">
    <Grid>
        <Border BorderBrush="CadetBlue" BorderThickness="2" HorizontalAlignment="Center" Height="346" Margin="166,101,125,101" VerticalAlignment="Center" Width="789">
